{
  "name": "figma-json-data-mapper",
  "version": "1.0.0",
  "description": "A Figma plugin for mapping JSON data to layer properties",
  "main": "main/code.js",
  "scripts": {
    "build": "tsc && node scripts/build-ui-modern.js && echo 'Plugin built successfully!'",
    "build:ui": "tsc && node scripts/build-ui-modern.js",
    "build:ui:legacy": "tsc && node scripts/build-ui-jsx.js",
    "build:main": "tsc --project tsconfig.json",
    "dev": "tsc --watch",
    "dev:ui": "tsc && node scripts/build-ui-modern.js --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.3",
    "@babel/plugin-transform-react-jsx": "^7.27.1",
    "@babel/preset-react": "^7.27.1",
    "@figma/plugin-typings": "^1.75.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.9",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.540.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "@dnd-kit/core": "^8.0.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^8.0.0"
  }
}
