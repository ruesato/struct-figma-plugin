{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "None",
    "outDir": "./ui",
    "rootDir": "./ui",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "react",
    "noEmit": false,
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "ui/ui.tsx"
  ],
  "exclude": [
    "node_modules",
    "main/**/*",
    "scripts/**/*"
  ]
}